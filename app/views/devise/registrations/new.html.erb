<section class="signup-box js-signup-box" style="opacity: 1;">
  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "signup-form"} do |f| %>
    <div class="email-wrap">
      <%= f.text_field :email, required: true, autofocus: true, class: "email", placeholder: "Email Address" %>
    </div>
    <div class="password-wrap">
      <%= f.password_field :password, required: true, class: "password", placeholder: "Password" %>
    </div>
    <div class="password-wrap">
      <%= f.password_field :password_confirmation, required: true, class: "password", placeholder: "Password Confirmation" %>
    </div>
    <%= f.submit "Sign Up", class: "button-save" %>
    <p>
      <%= link_to "Sign In", new_session_path(resource_name) %>
      <br>
      <%= link_to "Forgotten Password?", new_password_path(resource_name) %>
    </p>
  <% end %>
</section>