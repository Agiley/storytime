<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @posts.each do |post| %>
        <h2><%= link_to post.title, post %></h2>
        <p class='muted'><%= post.created_at.strftime("%b %d, %Y") %></p>
        <p><%= post.excerpt %></p>
        <p><%= link_to "Continue reading â†’", post %></p>
        <p><%= render 'tags', post: post %></p>
        <hr>
      <% end %>

      <%= paginate @posts %>
    </div>
    <div class="col-md-3">
      <h5>Tags</h5>
      <% tag_cloud Storytime::Post.tag_counts, %w[s m l] do |tag, css_class| %>
        <div><%= link_to tag.name, tag_path(tag.name), class: css_class %></div>
      <% end %>
    </div>
  </div>
</div>