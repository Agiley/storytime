<%= form_tag update_multiple_dashboard_roles_path, method: :patch, remote: true, class: "storytime-modal-form" do %>
  <div class="scroll-panel">
    <div class="scroll-panel-header">
      <button type="button" class="close pull-left" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= submit_tag t('dashboard.sites.save_button'), class: "btn btn-sm btn-success btn-outline pull-right" %>
      <h3 class="scroll-panel-title">
        Permissions
      </h3>
    </div>
    <div class="scroll-panel-body">

      <ul class="nav nav-tabs">
        <li role="presentation">
          <%= link_to icon("cog", t('dashboard.sites.edit')), [:edit, :dashboard, @site], remote: true, class: "storytime-modal-trigger btn btn-default" %>
        </li>
        <li role="presentation" class="active">
          <%= link_to icon("lock", "Permissions"), edit_multiple_dashboard_roles_path, remote: true, class: "storytime-modal-trigger btn btn-default" %>
        </li>
      </ul>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <% Storytime::Role.all.each do |role| %>
              <th>
                <%= role.label %>
                <%= hidden_field_tag "roles[#{role.id}][allowed_action_ids][]", nil %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% Storytime::Action.all.each do |action| %>
            <tr>
              <td><%= action.name %></td>
              <% Storytime::Role.all.each do |role| %>
                <td>
                  <input <%= 'checked' if role.allowed_action_ids.include?(action.id) %> class="check_boxes optional" id="roles_<%= role.id %>_allowed_action_ids_<%= action.id %>" name="roles[<%= role.id %>][allowed_action_ids][]" type="checkbox" value="<%= action.id %>">
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>