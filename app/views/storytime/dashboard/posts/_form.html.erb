<%= simple_form_for [:dashboard, @post] do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :excerpt %>
  <%= f.input :content, input_html: { rows: 20, class: "wysiwyg" }, label: false %>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>