<div id="main" data-post-id="<%= @post.slug || @post.id %>" data-dashboard-namespace="<%= Storytime.dashboard_namespace_path %>" data-preview="<%= params[:preview] %>">
  <div class="scroll-panel">
    <div class="scroll-panel-header">
      <div class="pull-left">
        <%= link_to icon('bars'), "#", class: "btn btn-default btn-sm", data: { toggle: "off-canvas",  target: "#dashboard-nav" } %>
        <%= link_to [:dashboard, Storytime::Post, type: @post.type_name], class: "btn btn-default btn-scroll-panel-header" do %>
          <%= icon('angle-left') %>
          <span class="hidden-xs"><%= @post.human_name.pluralize %></span>
        <% end %>
      </div>
      <div class="pull-right">
        <%= link_to icon('image'), '#', class: "btn btn-default btn-sm", data: { toggle: "collapse", target: '#featured-images-panel' } if Storytime.enable_file_upload %>

        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <%= icon("ellipsis-h") %>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" role="menu">
            <li>
              <%= link_to 'History', '#', data: { toggle: 'collapse', target: '#versions-panel' } %>
            </li>
            <li>
              <%= link_to 'Delete',  url_for([:dashboard, @post]),  method: :delete, data: { confirm: t('common.are_you_sure_you_want_to_delete', resource_name: @post.human_name) } %>
            </li>
          </ul>
        </div>

        <%= link_to "Preview / Publish", "#", class: 'btn btn-success btn-sm btn-outline', data: { toggle: 'collapse', target: '#post-advanced-settings' } %>
      </div>
      <!-- <h3 class="scroll-panel-title">
        Edit <%= @post.human_name %>
      </h3> -->
    </div>
    <div class="scroll-panel-body">
      <%= render 'form' %>
    </div>
  </div>
</div>