<div id="main" class="wysiwyg" data-post-id="<%= @post.slug || @post.id %>" data-dashboard-namespace="<%= Storytime.dashboard_namespace_path %>" data-preview="<%= params[:preview] %>">
  <div class="scroll-panel">
    <div class="scroll-panel-header">
      <div class="pull-left">
        <%= link_to "#", class: "btn btn-default btn-icon", data: { toggle: "off-canvas",  target: "#dashboard-nav" } do %>
          <i class="icon-st-icons-st-logo"></i>
        <% end %>
        <%= link_to [:dashboard, Storytime::Post, type: @post.type_name], class: "btn btn-default btn-scroll-panel-header" do %>
          <%= icon('angle-left') %>
          <span class="hidden-xs"><%= @post.human_name.pluralize %></span>
        <% end %>
      </div>
      <div class="pull-right">
        <%= link_to "#", class: "btn btn-default btn-icon margin-right", data: { toggle: "codemirror" } do %>
          <i class="fa fa-code" style="top: -1px;"></i>
        <% end %>
        
        <% if Storytime.enable_file_upload %>
          <%= link_to '#', class: "btn btn-default btn-icon margin-right", data: { toggle: "collapse", target: '#featured-images-panel' } do %>
            <i class="icon-st-icons-images"></i>
          <% end %>
        <% end %>

        <div class="btn-group margin-right">
          <button type="button" class="btn btn-default btn-icon dropdown-toggle" id="post-utilities" data-toggle="dropdown" aria-expanded="false">
            <i class="icon-st-icons-utilitymenu"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" role="menu" style="top: 125%;">
            <li>
              <%= link_to '#', data: { toggle: 'collapse', target: '#versions-panel' } do %>
                <i class="icon-st-icons-versions"></i>
                History
              <% end %>
            </li>
            <li>
              <%= link_to url_for([:dashboard, @post]),  method: :delete, data: { confirm: t('common.are_you_sure_you_want_to_delete', resource_name: @post.human_name) } do %>
                <i class="icon-st-icons-delete"></i>
                Delete
              <% end %>
            </li>
          </ul>
        </div>

        <%= link_to "Preview", post_path(@post, preview: true), class: "btn btn-sm btn-primary btn-outline margin-right margin-left", id: "preview_post", target: "_blank" %>

        <%= link_to (@post.published? ? "Update" : "Save / Publish"), "#", class: 'btn btn-primary btn-sm btn-outline', data: { toggle: 'collapse', target: '#post-advanced-settings' }, id: "advanced-settings-panel-toggle" %>
      </div>
    </div>
    <div class="scroll-panel-header" style="top: 65px;">
      <div id="image-tools-panel" class="">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <div id="medium-image-button">
                <%= link_to "Image", "#", class: "btn btn-sm btn-default insert-media-button"%>
              </div>
              <div class='medium-image-controls'>
                <div class='row'>
                  <div class='col-xs-3'>
                    <input type='text' id='medium-image-width' placeholder='Width' class='form-control input-sm' />
                  </div>
                  <div class='col-xs-3'>
                    <input type='text' id='medium-image-height' placeholder='Height' class='form-control input-sm' />
                  </div>
                  <div class='col-xs-6'>
                    <div class='btn-group btn-group-sm'>
                      <a href='#' class='btn btn-default medium-image-float' data-float='left'><i class='fa fa-align-left'></i></a>
                      <a href='#' class='btn btn-default medium-image-float' data-float='none'><i class='fa fa-align-justify'></i></a>
                      <a href='#' class='btn btn-default medium-image-float' data-float='right'><i class='fa fa-align-right'></i></a>
                      <a href='#' class='btn btn-default medium-image-delete'><i class='fa fa-trash-o'></i></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="scroll-panel-body" style="top: 130px;">
      <%= render 'form' %>
    </div>
  </div>
</div>