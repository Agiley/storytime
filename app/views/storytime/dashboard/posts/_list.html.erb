<div id="list" class="pane">
  <h3 class="heading">
    <%= current_post_type.name.humanize.pluralize %>
    <%= link_to new_dashboard_post_path(post_type: current_post_type.name), class: "btn btn-info btn-sm pull-right" do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
  </h3>
  <div class="scroll-y">
    <ul>
      <% @posts.each do |post| %>
        <li id="post_<%= post.id %>" class="<%= 'active' if current_page?(edit_dashboard_post_url(post)) %>">
          <%= link_to post.title, edit_dashboard_post_url(post) %>
          <span class="pull-right">
            <% unless post.published? %>
              <span class="label label-warning">Draft</span>
            <% end %>
            <%= delete_resource_link post, dashboard_post_path(post), !current_page?(edit_dashboard_post_url(post)) %>
          </span>
        </li>
      <% end %>
    </ul>
    <%= paginate @posts %>
  </div>
</div>