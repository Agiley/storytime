<div id="left" class="full-width-xs">
  <div class="scroll-panel">
    <%= simple_form_for [:dashboard, @snippet] do |f| %>   
      <div class="scroll-panel-header">
        <%= link_to icon('chevron-left'), "#", class: "btn btn-default btn-sm pull-left visible-xs", data: { toggle: "columns" } %>
        <%= f.submit class: "btn btn-sm btn-success btn-outline save pull-right" %>
        <%  unless @snippet.new_record? %>
          <div class="btn-group btn-group-sm pull-right" style="margin-right: 10px;">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <%= icon('ellipsis-h') %>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to "Delete", [:dashboard, @snippet], method: :delete, data: { confirm: t('common.are_you_sure_you_want_to_delete', resource_name: "Snippet") } %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="scroll-panel-body">
        
        <%= f.error_notification %>
        <%= f.input :name, autofocus: true %>
        <%= f.input :content, as: :text, input_html: { rows: 20, class: "summernote" } %>
        <%= render "storytime/dashboard/media/modal" %>
        
      </div>
    <% end %>
  </div>
</div>