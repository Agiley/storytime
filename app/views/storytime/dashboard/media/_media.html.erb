<div class="media-file" id="media_<%= media.id %>">
  <div class="media-thumb">
    <%= link_to media.file_url, target: "_blank" do %>
      <%= image_tag media.file_url(:thumb) %>
    <% end %>
  </div>

  <div class="action-buttons">
    <%= delete_resource_link media, dashboard_media_path(media) %>
    <% if show_media_insert_button? %>
      <button class="btn btn-info btn-xs insert-image-button" data-media-id="<%= media.id %>" data-image-url="<%= full_media_file_url media %>" data-thumb-url="<%= full_media_file_url media, :thumb %>">Select</button>
    <% end %>
  </div>
</div>