<div id="list" class="pane">
  <h3 class="heading">
    Post Types
    <%= link_to new_dashboard_post_type_path, class: "btn btn-info btn-sm pull-right" do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
  </h3>
  <div class="scroll-y">
    <ul>
      <% @post_types.each do |post_type| %>
        <li id="posttype_<%= post_type.id %>" class="<%= 'active' if current_page?(edit_dashboard_post_type_url(post_type)) %>">
          <%= link_to post_type.name, edit_dashboard_post_type_url(post_type) %>
          <span class="pull-right">
            <%= delete_resource_link post_type, dashboard_post_type_path(post_type), !current_page?(edit_dashboard_post_type_url(post_type)) %>
          </span>
        </li>
      <% end %>
    </ul>
    <%= paginate @post_types %>
  </div>
</div>