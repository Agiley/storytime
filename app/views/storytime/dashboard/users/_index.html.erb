<div class="scroll-panel">
  <div class="scroll-panel-header">
    <%= link_to icon("plus", t('dashboard.users.create_new_user')), new_dashboard_user_path, class: "btn btn-sm btn-success btn-outline pull-right storytime-modal-trigger", remote: true %>
    <h3 class="scroll-panel-title">
      <%= t('dashboard.users.users_header') %>
    </h3>
  </div>
  <div class="scroll-panel-body">
    <table class='table'>
      <thead>
        <tr>
          <th><%= t('dashboard.users.email') %></th>
          <th><%= t('dashboard.users.name') %></th>
          <th><%= t('dashboard.users.role') %></th>
          <th class='right'><%= t('dashboard.users.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'user.html.erb', collection: @users %>
      </tbody>
    </table>

    <%= paginate @users %>
  </div>
</div>