<div class="scroll-panel">
  <div class="scroll-panel-header">
    <button type="button" class="close pull-left" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= link_to icon("plus", t('dashboard.users.create_new_user')), new_dashboard_user_path, class: "btn btn-sm btn-success btn-outline pull-right storytime-modal-trigger", remote: true, id: "new-user-link" %>
    <h3 class="scroll-panel-title">
      <%= t('dashboard.users.users_header') %>
    </h3>
  </div>
  <div class="scroll-panel-body">

    <ul class="nav nav-tabs">
      <li role="presentation" class="active">
        <%= link_to icon("users", "Users"), [:dashboard, Storytime.user_class], remote: true, class: "storytime-modal-trigger" %>
      </li>
      <li role="presentation">
        <%= link_to icon("cog", t('dashboard.sites.edit')), [:edit, :dashboard, @site], remote: true, class: "storytime-modal-trigger" %>
      </li>
      <li role="presentation">
        <%= link_to icon("lock", "Permissions"), edit_multiple_dashboard_roles_path, remote: true, class: "storytime-modal-trigger" %>
      </li>
      <li role="presentation">
        <%= link_to icon("envelope", "Subscriptions"), [:dashboard, Storytime::Subscription], remote: true, class: "storytime-modal-trigger" %>
      </li>
    </ul>
    
    <ul class="list-group list-group-button-links">
      <%= render partial: 'user.html.erb', collection: @users %>
    </ul>

    <%= paginate @users %>
  </div>
</div>