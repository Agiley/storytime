<div class="scroll-panel">
  <div class="scroll-panel-header">
    <button type="button" class="close pull-left" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= link_to icon("plus", t('dashboard.users.create_new_user')), new_dashboard_user_path, class: "btn btn-sm btn-success btn-outline pull-right storytime-modal-trigger", remote: true, id: "new-user-link" %>
    <h3 class="scroll-panel-title">
      <%= t('dashboard.users.users_header') %>
    </h3>
  </div>
  <div class="scroll-panel-body">
    
    <ul class="list-group list-group-button-links">
      <%= render partial: 'user.html.erb', collection: @users %>
    </ul>

    <%= paginate @users %>
  </div>
</div>