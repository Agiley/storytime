<div class="container">
  <% if @page.is_a? Storytime::Page %>
    <% if params[:preview] %>
      <div class="alert alert-info" role="alert">
        Currently viewing a preview of "<%= @page.title %>".
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <%= @page.content.html_safe %>
      </div>
    </div>
  <% else %>
    BLOG PAGE
  <% end %>
</div>